{
	"name": "cli-welcome",
	"version": "3.0.1",
	"description": "Welcome header for Node.js CLI software.",
	"license": "MIT",
	"repository": "ahmadawais/cli-welcome",
	"author": {
		"name": "Ahmad Awais",
		"email": "me@AhmadAwais.com",
		"url": "https://twitter.com/MrAhmadAwais"
	},
	"main": "dist/index.cjs",
	"files": [
		"dist",
		"*.d.ts"
	],
	"keywords": [
		"cli-welcome",
		"Ahmad Awais",
		"ahmadawais"
	],
	"scripts": {
		"test": "node test.js",
		"format": "prettier --write \"./**/*.{js,json}\"",
		"dev": "npm run build -- --watch",
		"build": "tsup index.js --format cjs,esm --dts --sourcemap --clean --minify --shims",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"clear-any-console": "^1.16.0",
		"langbase": "*"
	},
	"devDependencies": {
		"@types/node": "^22.2.0",
		"prettier": "^3.3.3",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	},
	"type": "module",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	}
}
